<%- model_class = PollinationPlace -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:farmer_first_name) %>:</strong></dt>
  <dd><%= @pollination_place.farmer_first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:farmer_last_name) %>:</strong></dt>
  <dd><%= @pollination_place.farmer_last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:farm_name) %>:</strong></dt>
  <dd><%= @pollination_place.farm_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @pollination_place.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @pollination_place.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @pollination_place.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @pollination_place.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @pollination_place.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
  <dd><%= @pollination_place.zip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_address) %>:</strong></dt>
  <dd><%= @pollination_place.email_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:plant_id) %>:</strong></dt>
  <dd><%= @pollination_place.plant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @pollination_place.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @pollination_place.end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @pollination_place.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @pollination_place.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @pollination_place.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:elevation) %>:</strong></dt>
  <dd><%= @pollination_place.elevation %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pollination_places_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pollination_place_path(@pollination_place), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pollination_place_path(@pollination_place),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
