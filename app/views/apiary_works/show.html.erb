<%- model_class = ApiaryWork -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @apiary_work.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @apiary_work.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @apiary_work.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apiary_id) %>:</strong></dt>
  <dd><%= @apiary_work.apiary_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hives_id) %>:</strong></dt>
  <dd><%= @apiary_work.hives_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:work_information_type_id) %>:</strong></dt>
  <dd><%= @apiary_work.work_information_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @apiary_work.date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              apiary_works_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_apiary_work_path(@apiary_work), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              apiary_work_path(@apiary_work),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
