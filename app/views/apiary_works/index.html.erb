<%- model_class = ApiaryWork -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:apiary_id) %></th>
      <th><%= model_class.human_attribute_name(:hives_id) %></th>
      <th><%= model_class.human_attribute_name(:work_information_type_id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @apiary_works.each do |apiary_work| %>
      <tr>
        <td><%= link_to apiary_work.id, apiary_work_path(apiary_work) %></td>
        <td><%= apiary_work.name %></td>
        <td><%= apiary_work.description %></td>
        <td><%= apiary_work.notes %></td>
        <td><%= apiary_work.apiary_id %></td>
        <td><%= apiary_work.hives_id %></td>
        <td><%= apiary_work.work_information_type_id %></td>
        <td><%= apiary_work.date %></td>
        <td><%=l apiary_work.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_apiary_work_path(apiary_work), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      apiary_work_path(apiary_work),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_apiary_work_path,
            :class => 'btn btn-primary' %>
