<h1>Listing apiary_works</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Notes</th>
      <th>Apiary</th>
      <th>Hives</th>
      <th>Work information type</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apiary_works.each do |apiary_work| %>
      <tr>
        <td><%= apiary_work.name %></td>
        <td><%= apiary_work.description %></td>
        <td><%= apiary_work.notes %></td>
        <td><%= apiary_work.apiary %></td>
        <td><%= apiary_work.hives %></td>
        <td><%= apiary_work.work_information_type %></td>
        <td><%= apiary_work.date %></td>
        <td><%= link_to 'Show', apiary_work %></td>
        <td><%= link_to 'Edit', edit_apiary_work_path(apiary_work) %></td>
        <td><%= link_to 'Destroy', apiary_work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

