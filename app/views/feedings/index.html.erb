<%- model_class = Feeding -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:beehive_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:food_type_id) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:quantity_unit_id) %></th>
      <th><%= model_class.human_attribute_name(:supplements_id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @feedings.each do |feeding| %>
      <tr>
        <td><%= link_to feeding.id, feeding_path(feeding) %></td>
        <td><%= feeding.beehive_id %></td>
        <td><%= feeding.name %></td>
        <td><%= feeding.food_type_id %></td>
        <td><%= feeding.quantity %></td>
        <td><%= feeding.quantity_unit_id %></td>
        <td><%= feeding.supplements_id %></td>
        <td><%= feeding.date %></td>
        <td><%= feeding.notes %></td>
        <td><%= feeding.value %></td>
        <td><%=l feeding.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_feeding_path(feeding), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      feeding_path(feeding),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_feeding_path,
            :class => 'btn btn-primary' %>
