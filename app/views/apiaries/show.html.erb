<%- model_class = Apiary -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @apiary.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apiary_type_id) %>:</strong></dt>
  <dd><%= @apiary.apiary_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apiary_forage_type_id) %>:</strong></dt>
  <dd><%= @apiary.apiary_forage_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @apiary.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_id) %>:</strong></dt>
  <dd><%= @apiary.owner_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              apiaries_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_apiary_path(@apiary), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              apiary_path(@apiary),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
