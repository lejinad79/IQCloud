  <div class="col-md-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Your Apiary</h3>
      </div>
      <div class="panel-body">
        <div class="well">
          <%= f.select :apiary_id, Apiary.owner(current_beekeeper.id).all.map { |a| [ a.name, a.id ] }, {}, {class: "form-control"} %>
