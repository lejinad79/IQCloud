<h1>Listing beehive_groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Apiary</th>
      <th>Beehive group type</th>
      <th>Group type</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Elevation</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beehive_groups.each do |beehive_group| %>
      <tr>
        <td><%= beehive_group.name %></td>
        <td><%= beehive_group.apiary %></td>
        <td><%= beehive_group.beehive_group_type %></td>
        <td><%= beehive_group.group_type %></td>
        <td><%= beehive_group.description %></td>
        <td><%= beehive_group.latitude %></td>
        <td><%= beehive_group.longitude %></td>
        <td><%= beehive_group.elevation %></td>
        <td><%= beehive_group.notes %></td>
        <td><%= link_to 'Show', beehive_group %></td>
        <td><%= link_to 'Edit', edit_beehive_group_path(beehive_group) %></td>
        <td><%= link_to 'Destroy', beehive_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

