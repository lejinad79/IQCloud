<%- model_class = BeehiveGroup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @beehive_group.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apiary_id) %>:</strong></dt>
  <dd><%= @beehive_group.apiary_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:beehive_group_type_id) %>:</strong></dt>
  <dd><%= @beehive_group.beehive_group_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_type_id) %>:</strong></dt>
  <dd><%= @beehive_group.group_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @beehive_group.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @beehive_group.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @beehive_group.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:elevation) %>:</strong></dt>
  <dd><%= @beehive_group.elevation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @beehive_group.notes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              beehive_groups_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_beehive_group_path(@beehive_group), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              beehive_group_path(@beehive_group),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
