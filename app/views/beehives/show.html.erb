  <dt><strong><%= model_class.human_attribute_name(:race) %>:</strong></dt>
  <dd><%= @beehive.race %></dd>
  <dt><strong><%= model_class.human_attribute_name(:installed) %>:</strong></dt>
  <dd><%= @beehive.installed %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              beehives_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_beehive_path(@beehive), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              beehive_path(@beehive),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
