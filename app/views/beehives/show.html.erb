  <dd><%= @beehive.apiary_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_id) %>:</strong></dt>
  <dd><%= @beehive.group_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:colony_source_id) %>:</strong></dt>
  <dd><%= @beehive.colony_source_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:colony_strength) %>:</strong></dt>
  <dd><%= @beehive.colony_strength %></dd>
  <dt><strong><%= model_class.human_attribute_name(:colony_quality) %>:</strong></dt>
  <dd><%= @beehive.colony_quality %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supers_id) %>:</strong></dt>
  <dd><%= @beehive.supers_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @beehive.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:queen_name) %>:</strong></dt>
  <dd><%= @beehive.queen_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:seller_first_name) %>:</strong></dt>
  <dd><%= @beehive.seller_first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:seller_last_name) %>:</strong></dt>
  <dd><%= @beehive.seller_last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:place) %>:</strong></dt>
