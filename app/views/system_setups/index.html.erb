<%- model_class = SystemSetup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="table-responsive">
  <table id="system_setups" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:apiary_id) %></th>
      <th><%= model_class.human_attribute_name(:beekeeper_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @system_setups.each do |system_setup| %>
      <tr>
        <td><%= link_to system_setup.id, system_setup_path(system_setup) %></td>
        <td><%= system_setup.name %></td>
        <td><%= system_setup.apiary_id %></td>
        <td><%= system_setup.beekeeper_id %></td>
        <td><%=l system_setup.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_system_setup_path(system_setup), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      system_setup_path(system_setup),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_system_setup_path,
            :class => 'btn btn-primary' %>
