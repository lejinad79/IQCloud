<%= f.fields_for :activities do |v| %>
    <table class="table table-striped">
      <tr>
        <td><%= v.text_field :name, :class => 'form-control', :placeholder => 'Activity' %></td>
        <td><%= v.link_to_remove "Remove", :class => 'btn btn-danger' %></td>
      </tr>
    </table>
<% end %>
<p><%= f.link_to_add "Add", :activities, :class => 'btn btn-primary' %></p>