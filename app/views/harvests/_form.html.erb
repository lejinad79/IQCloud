<div class="row">
  <div class="col-md-8">
<%= form_for @harvest, :html => { :class => "form-horizontal harvest" } do |f| %>

    <% if @harvest.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@harvest.errors.count, "error") %> prohibited this harvest from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @harvest.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">New harvest data</h3>
          </div>
          <div class="panel-body">
  <div class="control-group">
    <%= f.label :beehive_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :beehive_id, :class => 'form-control' %>
    </div>
    <%= error_span(@harvest[:beehive_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@harvest[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :type_id, :class => 'form-control' %>
    </div>
    <%= error_span(@harvest[:type_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
    <%= error_span(@harvest[:quantity]) %>
  </div>
  <div class="control-group">
    <%= f.label :quantity_unit_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity_unit_id, :class => 'form-control' %>
    </div>
    <%= error_span(@harvest[:quantity_unit_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%= error_span(@harvest[:value]) %>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%= error_span(@harvest[:date]) %>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%= error_span(@harvest[:description]) %>
  </div>
        </div>
          <div class="panel-footer">
          <%= f.submit nil, :class => 'btn btn-primary' %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                      harvests_path, :class => 'btn btn-default' %>
            </div>
        </div>
<% end %>
</div>
<div class="col-md-4">

</div>
</div>